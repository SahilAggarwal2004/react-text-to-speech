{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "declaration": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  }
}
